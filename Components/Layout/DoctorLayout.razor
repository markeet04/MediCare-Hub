
@* Components/Layout/DoctorLayout.razor *@
@inherits LayoutComponentBase

<div class="doctor-layout">
    <div class="sidebar">
        <div class="sidebar-header">
            <img src="/api/placeholder/32/32" alt="MedCore" class="logo" />
            <h5>MedCore</h5>
        </div>
        
        <div class="sidebar-menu">
            <NavLink class="menu-item" href="/doctor/dashboard" Match="NavLinkMatch.All">
                <i class="fas fa-home"></i> Dashboard
            </NavLink>
            <NavLink class="menu-item" href="/doctor/patients">
                <i class="fas fa-user-injured"></i> Patients
            </NavLink>
            <NavLink class="menu-item" href="/doctor/appointments">
                <i class="fas fa-calendar-alt"></i> Appointments
            </NavLink>
            <NavLink class="menu-item" href="/doctor/treatments">
                <i class="fas fa-procedures"></i> Treatment Plans
            </NavLink>
            <NavLink class="menu-item" href="/doctor/lab-orders">
                <i class="fas fa-flask"></i> Lab Orders
            </NavLink>
            <NavLink class="menu-item" href="/doctor/ai-predictions">
                <i class="fas fa-brain"></i> AI Predictions
            </NavLink>
        </div>
        
        <div class="doctor-profile">
            <img src="/api/placeholder/40/40" alt="Dr. Profile" class="doctor-avatar" />
            <div class="doctor-info">
                <h6>Dr. Sarah Johnson</h6>
                <span class="badge bg-primary">Cardiologist</span>
            </div>
        </div>
    </div>

    <div class="main-content">
        <header class="top-bar">
            <div class="search-box">
                <i class="fas fa-search"></i>
                <input type="text" placeholder="Search..." />
            </div>
            <div class="top-bar-actions">
                <div class="notification-bell">
                    <i class="fas fa-bell"></i>
                    <span class="notification-badge">2</span>
                </div>
                <button class="btn btn-sm btn-outline-secondary">
                    <i class="fas fa-cog"></i>
                </button>
                <button class="btn btn-sm btn-outline-danger">
                    <i class="fas fa-sign-out-alt"></i>
                </button>
            </div>
        </header>

        <main class="content-area">
            @Body
        </main>
    </div>
</div>

<style>
    .doctor-layout {
        display: flex;
        height: 100vh;
        width: 100%;
    }

    .sidebar {
        width: 220px;
        background: #fff;
        box-shadow: 0 0 15px rgba(0,0,0,0.05);
        display: flex;
        flex-direction: column;
        z-index: 10;
    }

    .sidebar-header {
        display: flex;
        align-items: center;
        padding: 18px 16px;
        border-bottom: 1px solid #f0f0f0;
    }

    .logo {
        border-radius: 6px;
        margin-right: 10px;
    }

    .sidebar-header h5 {
        margin: 0;
        font-weight: 600;
        color: #2D82B7;
    }

    .sidebar-menu {
        padding: 16px 8px;
        flex-grow: 1;
        overflow-y: auto;
    }

    .menu-item {
        display: flex;
        align-items: center;
        padding: 12px 16px;
        margin-bottom: 8px;
        border-radius: 6px;
        color: #555;
        text-decoration: none;
        transition: all 0.2s ease;
    }

    .menu-item:hover {
        background-color: #f1f5f9;
        color: #2D82B7;
    }

    .menu-item i {
        margin-right: 10px;
        width: 20px;
        text-align: center;
    }

    .menu-item.active {
        background-color: #2D82B7;
        color: white;
    }

    .doctor-profile {
        padding: 16px;
        display: flex;
        align-items: center;
        border-top: 1px solid #f0f0f0;
    }

    .doctor-avatar {
        border-radius: 50%;
        border: 2px solid #e2e8f0;
    }

    .doctor-info {
        margin-left: 10px;
    }

    .doctor-info h6 {
        margin: 0;
        font-weight: 500;
        font-size: 0.9rem;
    }

    .doctor-info .badge {
        font-size: 0.7rem;
        font-weight: 400;
    }

    .main-content {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        background: #f8fafc;
    }

    .top-bar {
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 24px;
        background: white;
        box-shadow: 0 2px 8px rgba(0,0,0,0.03);
    }

    .search-box {
        display: flex;
        align-items: center;
        background: #f1f5f9;
        border-radius: 30px;
        padding: 6px 16px;
        width: 240px;
    }

    .search-box i {
        color: #94a3b8;
        margin-right: 8px;
    }

    .search-box input {
        border: none;
        background: transparent;
        outline: none;
        width: 100%;
        font-size: 0.9rem;
    }

    .top-bar-actions {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .notification-bell {
        position: relative;
        cursor: pointer;
        padding: 8px;
        border-radius: 50%;
        transition: all 0.2s ease;
    }

    .notification-bell:hover {
        background: #f1f5f9;
    }

    .notification-badge {
        position: absolute;
        top: 0;
        right: 0;
        background: #E76F51;
        color: white;
        font-size: 0.7rem;
        width: 16px;
        height: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
    }

    .content-area {
        flex-grow: 1;
        padding: 24px;
        overflow-y: auto;
    }
</style>