<!-- CSS for improved transitions and hover effects with responsive adjustments -->
<style>
    :root {
        --bs-teal: #20c997;
        --bs-teal-rgb: 32, 201, 151;
        --bs-teal-dark: #0ca678;
        --sidebar-width: 260px;
        --sidebar-width-collapsed: 0px;
    }
    
    body {
        font-family: 'Inter', 'Segoe UI', Roboto, sans-serif;
        overflow-x: hidden;
    }
    
    /* Sidebar styles */
    .sidebar {
        width: var(--sidebar-width);
        transition: all 0.3s ease;
        z-index: 1030;
    }
    
    .sidebar-content {
        overflow-y: auto;
        max-height: calc(100vh - 60px - 58px);
    }
    
    .card {
        transition: transform 0.2s, box-shadow 0.2s;
    }
    
    .card:hover {
        transform: translateY(-3px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
    
    button:not(.page-link) {
        transition: all 0.2s;
    }
    
    button:not(.page-link):hover {
        transform: translateY(-1px);
    }
    
    .sidebar-link {
        transition: all 0.2s;
    }
    
    .sidebar-link:not(.active):hover {
        background-color: rgba(255, 255, 255, 0.1);
        transform: translateX(3px);
    }
    
    .nav-link.active {
        font-weight: 500;
    }
    
    .avatar-wrapper {
        transition: all 0.2s;
    }
    
    .avatar-wrapper:hover {
        transform: scale(1.05);  
    }
    
    .table-hover tbody tr {
        transition: all 0.2s;
    }
    
    .table-hover tbody tr:hover {
        background-color: rgba(var(--bs-teal-rgb), 0.05) !important;
    }
    
    /* Custom color classes */
    .bg-teal {
        background-color: var(--bs-teal) !important;
    }
    
    .text-teal {
        color: var(--bs-teal) !important;
    }
    
    .bg-teal-subtle {
        background-color: rgba(var(--bs-teal-rgb), 0.1) !important;
    }
    
    .border-teal-light {
        border-color: rgba(255, 255, 255, 0.2) !important;
    }
    
    .btn-teal {
        background-color: var(--bs-teal);
        border-color: var(--bs-teal);
        color: #fff;
    }
    
    .btn-teal:hover {
        background-color: var(--bs-teal-dark);
        border-color: var(--bs-teal-dark);
        color: #fff;
    }
    
    /* Search container responsiveness */
    .search-container {
        width: 400px;
    }
    
    /* Search results styling */
    .search-result-item {
        padding: 0.5rem 0.75rem;
        border-radius: 0.375rem;
        cursor: pointer;
        transition: all 0.2s;
        text-decoration: none;
        color: inherit;
        display: block;
    }
    
    .search-result-item:hover {
        background-color: var(--bs-teal);
        color: white;
        text-decoration: none;
    }
    
    .search-result-item i {
        width: 20px;
    }
    
    /* Modal enhancements */
    .modal-content {
        border-radius: 1rem;
    }
    
    .modal-header {
        border-radius: 1rem 1rem 0 0;
    }
    
    /* Responsive styles */
    @@media (max-width: 1199.98px) {
        .search-container {
            width: 300px;
        }
    }
    
    @@media (max-width: 991.98px) {
        .search-container {
            width: 250px;
        }
    }
    
    @@media (max-width: 767.98px) {
        .sidebar {
            position: fixed;
            top: 0;
            left: calc(-1 * var(--sidebar-width));
            height: 100vh;
            box-shadow: none;
        }
        
        .sidebar[data-mobile-status="open"] {
            left: 0;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }
        
        .container-fluid.p-4 {
            padding: 1rem !important;
        }
    }
    
    @@media (max-width: 575.98px) {
        .navbar-brand span {
            font-size: 0.9rem;
        }
        
        .container-fluid.p-4 {
            padding: 0.75rem !important;
        }
    }
</style>

<!-- Script for enabling tooltips, responsive sidebar, and search functionality -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Enable tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });
        
        // Define searchable pages for lab technician
        const pages = [
            { title: 'Dashboard', url: '/lab/dashboard', icon: 'bi-speedometer2', description: 'Lab dashboard with overview and statistics' },
            { title: 'View Assigned Tests', url: '/lab/pending-tests', icon: 'bi-hourglass-split', description: 'View and manage assigned lab tests' },
            { title: 'Submit Lab Reports', url: '/lab/submit-report', icon: 'bi-check2-circle', description: 'Submit completed lab test reports' },
            { title: 'My Profile', url: '/lab/profile', icon: 'bi-person-badge', description: 'Lab technician profile and settings' }
        ];
        
        // Search functionality
        function performSearch(query, resultsContainer, resultsContent) {
            if (query.length === 0) {
                resultsContainer.classList.add('d-none');
                return;
            }
            
            const filteredPages = pages.filter(page => 
                page.title.toLowerCase().includes(query.toLowerCase()) ||
                page.description.toLowerCase().includes(query.toLowerCase())
            );
            
            if (filteredPages.length === 0) {
                resultsContent.innerHTML = '<div class="p-2 text-muted">No pages found</div>';
            } else {
                resultsContent.innerHTML = filteredPages.map(page => `
                    <a href="${page.url}" class="search-result-item d-flex align-items-center">
                        <i class="bi ${page.icon} me-2"></i>
                        <div>
                            <div class="fw-medium">${page.title}</div>
                            <small class="text-muted">${page.description}</small>
                        </div>
                    </a>
                `).join('');
            }
            
            resultsContainer.classList.remove('d-none');
        }
        
        // Desktop search
        const searchInput = document.getElementById('searchInput');
        const searchResults = document.getElementById('searchResults');
        const searchResultsContent = document.getElementById('searchResultsContent');
        
        if (searchInput) {
            searchInput.addEventListener('input', function() {
                performSearch(this.value, searchResults, searchResultsContent);
            });
            
            searchInput.addEventListener('focus', function() {
                if (this.value.length > 0) {
                    searchResults.classList.remove('d-none');
                }
            });
        }
        
        // Mobile search
        const mobileSearchInput = document.getElementById('mobileSearchInput');
        const mobileSearchResults = document.getElementById('mobileSearchResults');
        const mobileSearchResultsContent = document.getElementById('mobileSearchResultsContent');
        
        if (mobileSearchInput) {
            mobileSearchInput.addEventListener('input', function() {
                performSearch(this.value, mobileSearchResults, mobileSearchResultsContent);
            });
            
            mobileSearchInput.addEventListener('focus', function() {
                if (this.value.length > 0) {
                    mobileSearchResults.classList.remove('d-none');
                }
            });
        }
        
        // Hide search results when clicking outside
        document.addEventListener('click', function(event) {
            if (searchInput && !searchInput.closest('.search-container').contains(event.target)) {
                searchResults.classList.add('d-none');
            }
            if (mobileSearchInput && !mobileSearchInput.closest('.position-relative').contains(event.target)) {
                mobileSearchResults.classList.add('d-none');
            }
        });
        
        // Sidebar toggle functionality
        const sidebar = document.getElementById('sidebar');
        const sidebarToggleBtn = document.getElementById('sidebarToggleBtn');
        const closeSidebarBtn = document.getElementById('closeSidebarBtn');
        const sidebarOverlay = document.getElementById('sidebarOverlay');
        
        function openSidebar() {
            sidebar.setAttribute('data-mobile-status', 'open');
            sidebarOverlay.classList.remove('d-none');
            document.body.style.overflow = 'hidden';
        }
        
        function closeSidebar() {
            sidebar.setAttribute('data-mobile-status', 'closed');
            sidebarOverlay.classList.add('d-none');
            document.body.style.overflow = '';
        }
        
        if (sidebarToggleBtn) {
            sidebarToggleBtn.addEventListener('click', function() {
                openSidebar();
            });
        }
        
        if (closeSidebarBtn) {
            closeSidebarBtn.addEventListener('click', function() {
                closeSidebar();
            });
        }
        
        if (sidebarOverlay) {
            sidebarOverlay.addEventListener('click', function() {
                closeSidebar();
            });
        }
        
        // Close sidebar when clicking on a link (for mobile)
        const sidebarLinks = document.querySelectorAll('.sidebar-link');
        sidebarLinks.forEach(link => {
            link.addEventListener('click', function() {
                if (window.innerWidth < 768) {
                    closeSidebar();
                }
            });
        });
        
        // Handle window resize
        window.addEventListener('resize', function() {
            if (window.innerWidth >= 768) {
                sidebar.style.left = '';
                sidebarOverlay.classList.add('d-none');
                document.body.style.overflow = '';
            }
        });
    });
</script>