                        <a class="nav-link rounded-pill text-white d-flex align-items-center py-2 px-3 sidebar-link @(Nav.Uri.Contains("/profile") ? "active bg-white text-teal" : "")" href="/lab/profile" data-page-title="My Profile">
                            <i class="bi bi-person-badge me-3"></i>
