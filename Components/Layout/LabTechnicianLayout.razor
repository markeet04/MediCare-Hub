                    <li class="nav-item mb-2">
                        <a class="nav-link rounded-pill text-white d-flex align-items-center py-2 px-3 sidebar-link @(Nav.Uri.Contains("/dashboard") ? "active bg-white text-teal" : "")" href="/lab/dashboard" data-page-title="Dashboard">
