private bool IsValidCnic(string cnic)
{
    // CNIC: 5 digits - 7 digits - 1 digit
    return System.Text.RegularExpressions.Regex.IsMatch(cnic ?? "", @"^\d{5}-\d{7}-\d{1}$");
}

private bool IsValidPhone(string phone)
{
    // Phone: 11 digits, starts with 0
    return System.Text.RegularExpressions.Regex.IsMatch(phone ?? "", @"^0\d{10}$");
}

private bool IsValidUsername(string username)
{
    return !string.IsNullOrWhiteSpace(username) && username.Length >= 5;
}

