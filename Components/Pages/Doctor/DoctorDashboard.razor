@page "/"
@page "/doctor/dashboard"
@layout DoctorLayout

<PageTitle>Doctor Dashboard</PageTitle>

<div class="dashboard-container">
    <div class="welcome-section">
        <h1>Welcome back, Dr. Johnson</h1>
        <p>Tuesday, May 6, 2025</p>
    </div>

    <div class="stats-row">
        <div class="stat-card">
            <div class="stat-content">
                <h3>24</h3>
                <p>Patients</p>
            </div>
            <div class="stat-icon blue">
                <i class="fas fa-user-injured"></i>
            </div>
        </div>
        
        <div class="stat-card">
            <div class="stat-content">
                <h3>8</h3>
                <p>Today's Appointments</p>
            </div>
            <div class="stat-icon green">
                <i class="fas fa-calendar-check"></i>
            </div>
        </div>
        
        <div class="stat-card">
            <div class="stat-content">
                <h3>3</h3>
                <p>Critical Cases</p>
            </div>
            <div class="stat-icon orange">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
        </div>
        
        <div class="stat-card">
            <div class="stat-content">
                <h3>5</h3>
                <p>Pending Lab Results</p>
            </div>
            <div class="stat-icon purple">
                <i class="fas fa-flask"></i>
            </div>
        </div>
    </div>

    <div class="main-row">
        <div class="main-card appointments-card">
            <div class="card-header">
                <h5>Today's Appointments</h5>
                <div class="header-actions">
                    <button class="btn btn-sm btn-outline-primary">View All</button>
                </div>
            </div>
            <div class="card-body">
                <div class="appointment-item">
                    <div class="time-block">09:00</div>
                    <div class="appointment-details">
                        <h6>James Wilson</h6>
                        <p>Follow-up: Hypertension</p>
                    </div>
                    <div class="appointment-status">
                        <span class="badge bg-primary">Upcoming</span>
                    </div>
                </div>
                
                <div class="appointment-item active">
                    <div class="time-block">10:30</div>
                    <div class="appointment-details">
                        <h6>Emily Parker</h6>
                        <p>Post-surgery Check</p>
                    </div>
                    <div class="appointment-status">
                        <span class="badge bg-success">Current</span>
                    </div>
                </div>
                
                <div class="appointment-item">
                    <div class="time-block">13:45</div>
                    <div class="appointment-details">
                        <h6>Michael Brown</h6>
                        <p>New Patient: Chest Pain</p>
                    </div>
                    <div class="appointment-status">
                        <span class="badge bg-warning">Priority</span>
                    </div>
                </div>
                
                <div class="appointment-item">
                    <div class="time-block">15:00</div>
                    <div class="appointment-details">
                        <h6>Linda Garcia</h6>
                        <p>Lab Results Review</p>
                    </div>
                    <div class="appointment-status">
                        <span class="badge bg-primary">Upcoming</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="main-card critical-card">
            <div class="card-header">
                <h5>Critical Patients</h5>
                <div class="header-actions">
                    <button class="btn btn-sm btn-outline-danger">View All</button>
                </div>
            </div>
            <div class="card-body">
                <div class="critical-item">
                    <div class="patient-info">
                        <h6>Robert Thompson</h6>
                        <p>Room 302 - Cardiac Arrest</p>
                    </div>
                    <div class="severity high">
                        <i class="fas fa-circle"></i> High Risk
                    </div>
                </div>
                
                <div class="critical-item">
                    <div class="patient-info">
                        <h6>Maria Rodriguez</h6>
                        <p>Room 214 - Pneumonia</p>
                    </div>
                    <div class="severity medium">
                        <i class="fas fa-circle"></i> Medium Risk
                    </div>
                </div>
                
                <div class="critical-item">
                    <div class="patient-info">
                        <h6>David Chen</h6>
                        <p>ER - Diabetic Ketoacidosis</p>
                    </div>
                    <div class="severity medium">
                        <i class="fas fa-circle"></i> Medium Risk
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="secondary-row">
        <div class="secondary-card lab-card">
            <div class="card-header">
                <h5>Lab Orders</h5>
                <div class="header-actions">
                    <button class="btn btn-sm btn-outline-secondary">New Order</button>
                </div>
            </div>
            <div class="card-body">
                <div class="lab-item">
                    <div class="lab-info">
                        <h6>Blood Work Panel</h6>
                        <p>Patient: John Davis</p>
                    </div>
                    <div class="lab-status pending">
                        <i class="fas fa-clock"></i> Pending
                    </div>
                </div>
                
                <div class="lab-item">
                    <div class="lab-info">
                        <h6>Chest X-Ray</h6>
                        <p>Patient: Emily Parker</p>
                    </div>
                    <div class="lab-status completed">
                        <i class="fas fa-check-circle"></i> Completed
                    </div>
                </div>
                
                <div class="lab-item">
                    <div class="lab-info">
                        <h6>Troponin Test</h6>
                        <p>Patient: Robert Thompson</p>
                    </div>
                    <div class="lab-status urgent">
                        <i class="fas fa-exclamation-circle"></i> Urgent
                    </div>
                </div>
            </div>
        </div>

        <div class="secondary-card ai-card">
            <div class="card-header">
                <h5>AI Predictions</h5>
                <div class="header-actions">
                    <button class="btn btn-sm btn-outline-primary">Configure</button>
                </div>
            </div>
            <div class="card-body">
                <div class="ai-item">
                    <div class="ai-info">
                        <h6>High Risk of Cardiac Event</h6>
                        <p>Patient: Robert Thompson</p>
                    </div>
                    <div class="ai-confidence high">
                        87% Confidence
                    </div>
                </div>
                
                <div class="ai-item">
                    <div class="ai-info">
                        <h6>COPD Exacerbation</h6>
                        <p>Patient: Maria Rodriguez</p>
                    </div>
                    <div class="ai-confidence medium">
                        72% Confidence
                    </div>
                </div>
                
                <div class="ai-item">
                    <div class="ai-info">
                        <h6>Treatment Efficacy</h6>
                        <p>Patient: John Davis</p>
                    </div>
                    <div class="ai-confidence high">
                        91% Confidence
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

