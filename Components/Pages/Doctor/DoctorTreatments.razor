    document.addEventListener('DOMContentLoaded', function() {
        // Optional: Add any interactive scripts for the treatments page
        const createTreatmentBtn = document.querySelector('#newTreatmentModal .btn-teal');
        
        createTreatmentBtn.addEventListener('click', function() {
            // Placeholder for treatment creation logic
            console.log('Creating new treatment plan');
            // You would typically add validation and API call here
            // For now, just close the modal
            const modal = bootstrap.Modal.getInstance(document.getElementById('newTreatmentModal'));
            modal.hide();
        });
    });
</script>