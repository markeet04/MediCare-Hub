                                            <div class="patient-avatar">
                                                @GetInitials(appointment.PatientName)
                                            </div>
                                            <div class="patient-details">
                                                <h6>@appointment.PatientName</h6>
                                            </div>
                                        </div>
                                        <span class="status-badge @GetStatusClass(appointment.Status)">
                                            @appointment.Status
                                        </span>
                                    </div>
                    
                                </div>
                            </div>
                        }
                    </div>
