    /* Calendar Custom Styles */
    .calendar-header {
        font-weight: 500;
        color: #6c757d;
    }
    
    .calendar-day {
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        cursor: pointer;
        transition: all 0.2s ease;
        font-weight: 500;
    }
    
    .calendar-day:hover {
        background-color: rgba(32, 201, 151, 0.1);
    }
    
    .calendar-day.current-day {
        background-color: var(--bs-teal);
        color: white;
    }
    
    .calendar-day.has-appointments {
        position: relative;
    }
    
    .calendar-day.has-appointments::after {
        content: '';
        position: absolute;
        bottom: 8px;
        width: 5px;
        height: 5px;
        border-radius: 50%;
        background-color: var(--bs-primary);
    }
    
    .calendar-day-indicator {
        width: 12px;
        height: 12px;
        border-radius: 50%;
    }
    
    .current-day-indicator {
        background-color: var(--bs-teal);
    }
    
    .has-appointments-indicator {
        background-color: var(--bs-primary);
    }
    
    /* Timeline Styles */
    .timeline {
        position: relative;
        padding-left: 90px;
    }
    
    .timeline::before {
        content: '';
        position: absolute;
        left: 85px;
        top: 0;
        bottom: 0;
        width: 2px;
        background-color: #dee2e6;
    }
    
    .timeline-item {
        position: relative;
        margin-bottom: 20px;
    }
    
    .timeline-item-time {
        position: absolute;
        left: -90px;
        width: 75px;
        text-align: right;
        color: #6c757d;
        font-size: 0.85rem;
        font-weight: 500;
        padding-top: 0.5rem;
    }
    
    .timeline-item-content {
        position: relative;
    }
    
    .timeline-item-content::before {
        content: '';
        position: absolute;
        left: -17px;
        top: 15px;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background-color: var(--bs-teal);
        border: 2px solid white;
        box-shadow: 0 0 0 1px #dee2e6;
    }
</style>